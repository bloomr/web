- content_for :title, 'Paiement du Programme'
- content_for :hide_header, true
- content_for :hide_footer, true

#payment.flexy
  %header
    %div.left
      %span.white-logo
      %a.second{ href: 'javascript:history.back();' }
        ←&nbsp;
        %span.back RETOUR
        %br
        %span.sub Inscription
    %p.hide-phone Paiement sécurisé par <b>stripe</b>
  %section.main

    %h1.title Fabuleuse décision !
    %p.last-step Avec quelle adresse email souhaites-tu te connecter ?

    = form_for Bloomy.new, url: { controller: 'payment', action: 'post_email'} do |f|
      = f.email_field :email, placeholder: 'Ton adresse email', required: true
      = hidden_field_tag :program_name, @program_name
      = button_tag 'Suivant', class: 'crazy-btn yellow'

      .flash-messages
        - if flash[:error]
          %p #{flash[:error].html_safe}

  %footer
    %a{ href: '/' } Bloomr

